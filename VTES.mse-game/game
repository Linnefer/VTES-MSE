############################################################## Functions & filters
	
# General functions
init script:
	

	############### Sorting
	extensive_sort := {card.name}
	############### Determine Card Position
	pos_of_card := {
		position(
			of: card
			in: set
			order_by: { extensive_sort() }
			) + 1
	}

	############################################################## Other boxes

	definelayout := {
		card.cardtype
		if	contains(card.cardtype, match: "Library") then "library"
		else 	"crypt"
	}

	type_default := {
		"Crypt Abomination"
	}
	
	strip_name := {
		replace(replace(to_lower(card.name), match: ",", replace: "-"), match: "( |')", replace: "")
	}

	trim_type := {
		card.cardtype
		replace(card.cardtype, match: "(Crypt|Library) ", replace: "")
	}


############################################################## Set fields
	
set field:
	type: info
	name: Set Information
set field:
	type: text
	name: title
	identifying: true
set field:
	type: text
	name: description
	multi line: true
set field:
	type: text
	name: set_code
	description: Typically, a four letter code for the set.
set field:
	type: symbol
	name: symbol
	description: The symbol for this set, double click to edit

default set style:
	symbol:
		max aspect ratio: 2.5
		variation:
			name: common
			border radius: 0
			fill type: solid
			fill color:   rgb(255,255,255)
			border color: rgb(0,0,0)


